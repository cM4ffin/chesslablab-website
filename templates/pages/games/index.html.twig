{% extends 'layouts/study.html.twig' %}

{% block main %}
  <div class="col-md-6">
    <div id="chessboard"></div>
  </div>
  <div class="col-md-6">
    <ul class="nav nav-tabs" id="gamesTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="database-games-tab" data-bs-toggle="tab" data-bs-target="#databaseGamesTab" type="button" role="tab" aria-controls="databaseGamesTab" aria-selected="true">
          Database
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="browse-games-tab" data-bs-toggle="tab" data-bs-target="#browseGamesTab" type="button" role="tab" aria-controls="browseGamesTab" aria-selected="false">
          {{ 'Move'|trans }}
        </button>
      </li>
    </ul>
    <div class="tab-content" id="gamesTabsContent">
      <div class="tab-pane show active" id="databaseGamesTab" role="tabpanel" aria-labelledby="database-games-tab">
        {% include 'pages/games/search_games_form.html.twig' %}
      </div>
      <div class="tab-pane" id="browseGamesTab" role="tabpanel" aria-labelledby="browse-games-tab">
        {% include 'partial/panel/san_panel.html.twig' %}
      </div>
    </div>
  </div>
  {% block javascripts %}
    {% block importmap %}
      {{ importmap('js/pages/games/index.js') }}
    {% endblock %}
  {% endblock %}
{% endblock %}
