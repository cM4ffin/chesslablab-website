<div class="modal fade" id="openingsSearchModal" tabindex="-1" aria-labelledby="openingsSearchModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="openingsSearchModalLabel">{{ 'Search Openings'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-md-4 mb-3">
              <select name="eco" class="form-select" aria-label="{{ 'Select a variant'|trans }}" required>
                <option value="">{{ 'Select an ECO code'|trans }}</option>
                <option value="A">A: {{ 'Flank Openings'|trans }}</option>
                <option value="B">B: {{ 'Semi-Open Games other than the French Defense'|trans }}</option>
                <option value="C">C: {{ 'Open Games and the French Defense'|trans }}</option>
                <option value="D">D: {{ 'Closed Games and Semi-Closed Games'|trans }}</option>
                <option value="E">E: {{ 'Indian Defenses'|trans }}</option>
              </select>
            </div>
            <div class="col-md-3 mb-3">
              <input type="text" name="name" placeholder="{{ 'Name'|trans }}" class="form-control">
            </div>
            <div class="col-md-3 mb-3">
              <input type="text" name="movetext" placeholder="{{ 'Movetext'|trans }}" class="form-control">
            </div>
            <div class="col-md-2 mb-3">
              <button type="submit" class="btn btn-primary w-100">{{ 'Search'|trans }}</button>
            </div>
            <table class="table table-light table-hover d-none">
              <tbody role="button"></tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
