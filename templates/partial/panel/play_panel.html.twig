<div id="playPanel" class="p-2 bg-light d-none">
  <div class="d-flex">
    {% include 'partial/panel/board_actions_dropdown.html.twig' %}
    <div id="gameActionsDropdown" class="dropdown">
      <button class="btn btn-light btn-sm w-100 rounded-0" type="button" id="gameActionsMenu" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-list"></i> {{ 'Game'|trans }}
      </button>
      <ul class="dropdown-menu rounded-0" aria-labelledby="gameActionsMenu">
        <li>
          <a class="dropdown-item" href="#">
            <i class="bi bi-arrow-left"></i> {{ 'Propose a takeback'|trans }}
          </a>
        </li>
        <li>
          <a class="dropdown-item" href="#">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-diamond-half" viewBox="0 0 16 16">
              <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098zM8 .989c.127 0 .253.049.35.145l6.516 6.516a.495.495 0 0 1 0 .7L8.35 14.866a.5.5 0 0 1-.35.145z"/>
            </svg> {{ 'Offer draw'|trans }}
          </a>
        </li>
        <li>
          <a class="dropdown-item" href="#">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-flag-fill" viewBox="0 0 16 16">
              <path d="M14.778.085A.5.5 0 0 1 15 .5V8a.5.5 0 0 1-.314.464L14.5 8l.186.464-.003.001-.006.003-.023.009a12 12 0 0 1-.397.15c-.264.095-.631.223-1.047.35-.816.252-1.879.523-2.71.523-.847 0-1.548-.28-2.158-.525l-.028-.01C7.68 8.71 7.14 8.5 6.5 8.5c-.7 0-1.638.23-2.437.477A20 20 0 0 0 3 9.342V15.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 1 0v.282c.226-.079.496-.17.79-.26C4.606.272 5.67 0 6.5 0c.84 0 1.524.277 2.121.519l.043.018C9.286.788 9.828 1 10.5 1c.7 0 1.638-.23 2.437-.477a20 20 0 0 0 1.349-.476l.019-.007.004-.002h.001"/>
            </svg> {{ 'Resign'|trans }}
          </a>
        </li>
      </ul>
    </div>
  </div>
  {% include 'partial/panel/history_buttons.html.twig' %}
  <table id="timerTable" class="table">
    <tbody class="small"></tbody>
  </table>
  {% include 'partial/panel/moves_browser.html.twig' %}
  <div id="finishedButtons" class="btn-group-vertical w-100 mt-2 d-none">
    <button class="btn btn-primary btn-sm" type="button">{{ 'Offer Rematch'|trans }}</button>
    <button class="btn btn-primary btn-sm" type="button" data-redirect="{{ path('pages_play_online') }}">{{ 'Play Online'|trans }}</button>
  </div>
</div>
